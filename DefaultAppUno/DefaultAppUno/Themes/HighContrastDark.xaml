<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- High Contrast Dark Theme: Maximum contrast with pure black background -->

    <!-- Core Colors - Maximum Contrast -->
    <Color x:Key="HCDarkBackground">#000000</Color>          <!-- Pure Black -->
    <Color x:Key="HCDarkForeground">#FFFFFF</Color>          <!-- Pure White -->
    <Color x:Key="HCDarkAccent">#FFFF00</Color>              <!-- Yellow for links/accents -->
    <Color x:Key="HCDarkSelected">#00FF00</Color>            <!-- Green for selection -->
    <Color x:Key="HCDarkHottrack">#00FFFF</Color>            <!-- Cyan for hover -->
    <Color x:Key="HCDarkDisabled">#808080</Color>            <!-- Gray for disabled -->
    <Color x:Key="HCDarkBorder">#FFFFFF</Color>              <!-- White borders -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="HCDarkBackgroundBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="HCDarkForegroundBrush" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="HCDarkAccentBrush" Color="{StaticResource HCDarkAccent}" />
    <SolidColorBrush x:Key="HCDarkSelectedBrush" Color="{StaticResource HCDarkSelected}" />

    <!-- Background Colors -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{StaticResource HCDarkBackground}" />

    <!-- Card - No decorative effects, solid borders -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{StaticResource HCDarkBorder}" />

    <!-- Text Colors - Pure white for maximum readability -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="{StaticResource HCDarkDisabled}" />

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="{StaticResource HCDarkAccent}" />
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="{StaticResource HCDarkAccent}" />
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="{StaticResource HCDarkAccent}" />
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="{StaticResource HCDarkDisabled}" />

    <!-- Control Fill Colors - Black background -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#1A1A1A" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="{StaticResource HCDarkBackground}" />

    <!-- Control Stroke Colors - White borders -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="{StaticResource HCDarkBorder}" />
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="{StaticResource HCDarkBorder}" />

    <!-- Button - High contrast with clear borders -->
    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#1A1A1A" />
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#333333" />
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="ButtonForeground" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{StaticResource HCDarkHottrack}" />
    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{StaticResource HCDarkSelected}" />
    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="{StaticResource HCDarkDisabled}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource HCDarkBorder}" />

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="{StaticResource HCDarkBackground}" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="#1A1A1A" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="#333333" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{StaticResource HCDarkBorder}" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackground" Color="{StaticResource HCDarkBackground}" />

    <!-- Focus Visual - High visibility -->
    <SolidColorBrush x:Key="FocusVisualPrimaryBrush" Color="{StaticResource HCDarkForeground}" />
    <SolidColorBrush x:Key="FocusVisualSecondaryBrush" Color="{StaticResource HCDarkAccent}" />

</ResourceDictionary>

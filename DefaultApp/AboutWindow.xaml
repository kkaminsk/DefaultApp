<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DefaultApp.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DefaultApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About Default App">


    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: Icon and App Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <Image
                Source="ms-appx:///Assets/Square150x150Logo.png"
                Width="48"
                Height="48" />
            <StackPanel VerticalAlignment="Center" Spacing="4">
                <TextBlock
                    Text="Default App"
                    FontSize="24"
                    FontWeight="SemiBold" />
                <TextBlock
                    x:Name="VersionText"
                    Text="Version 1.1"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </StackPanel>

        <!-- Content: Author Info -->
        <ScrollViewer Grid.Row="1" Margin="0,24,0,24" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!-- Author Info -->
                <StackPanel Spacing="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Author:" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Grid.Column="1" Text="Kevin Kaminski MVP" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Organization:" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Grid.Column="1" Text="Big Hat Group Inc." />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="License:" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Grid.Column="1" Text="MIT" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer: Close Button -->
        <Button
            Grid.Row="2"
            x:Name="CloseButton"
            Content="Close"
            Click="CloseButton_Click"
            HorizontalAlignment="Right"
            MinWidth="100"
            Style="{StaticResource AccentButtonStyle}" />
    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- High Contrast Light Theme: Maximum contrast with pure white background -->

    <!-- Core Colors - Maximum Contrast -->
    <Color x:Key="HCLightBackground">#FFFFFF</Color>         <!-- Pure White -->
    <Color x:Key="HCLightForeground">#000000</Color>         <!-- Pure Black -->
    <Color x:Key="HCLightAccent">#0000FF</Color>             <!-- Blue for links/accents -->
    <Color x:Key="HCLightSelected">#008000</Color>           <!-- Green for selection -->
    <Color x:Key="HCLightHottrack">#800080</Color>           <!-- Purple for hover -->
    <Color x:Key="HCLightDisabled">#808080</Color>           <!-- Gray for disabled -->
    <Color x:Key="HCLightBorder">#000000</Color>             <!-- Black borders -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="HCLightBackgroundBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="HCLightForegroundBrush" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="HCLightAccentBrush" Color="{StaticResource HCLightAccent}" />
    <SolidColorBrush x:Key="HCLightSelectedBrush" Color="{StaticResource HCLightSelected}" />

    <!-- Background Colors -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{StaticResource HCLightBackground}" />

    <!-- Card - No decorative effects, solid borders -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{StaticResource HCLightBorder}" />

    <!-- Text Colors - Pure black for maximum readability -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="{StaticResource HCLightDisabled}" />

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="{StaticResource HCLightAccent}" />
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="{StaticResource HCLightAccent}" />
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="{StaticResource HCLightAccent}" />
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="{StaticResource HCLightDisabled}" />

    <!-- Control Fill Colors - White background -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="{StaticResource HCLightBackground}" />

    <!-- Control Stroke Colors - Black borders -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="{StaticResource HCLightBorder}" />
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="{StaticResource HCLightBorder}" />

    <!-- Button - High contrast with clear borders -->
    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="ButtonForeground" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{StaticResource HCLightHottrack}" />
    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{StaticResource HCLightSelected}" />
    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="{StaticResource HCLightDisabled}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource HCLightBorder}" />

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="{StaticResource HCLightBackground}" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{StaticResource HCLightBorder}" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackground" Color="{StaticResource HCLightBackground}" />

    <!-- Status Indicator Colors - High contrast versions -->
    <SolidColorBrush x:Key="StatusRunningBrush" Color="{StaticResource HCLightSelected}" />
    <SolidColorBrush x:Key="StatusStoppedBrush" Color="{StaticResource HCLightDisabled}" />
    <SolidColorBrush x:Key="StatusStartingBrush" Color="#CC6600" />
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#CC0000" />

    <!-- Focus Visual - High visibility -->
    <SolidColorBrush x:Key="FocusVisualPrimaryBrush" Color="{StaticResource HCLightForeground}" />
    <SolidColorBrush x:Key="FocusVisualSecondaryBrush" Color="{StaticResource HCLightAccent}" />

</ResourceDictionary>

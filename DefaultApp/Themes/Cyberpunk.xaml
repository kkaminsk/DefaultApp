<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cyberpunk Theme: Neon aesthetic with high contrast for accessibility -->

    <!-- Primary Colors -->
    <Color x:Key="CyberpunkPrimary">#FF00FF</Color>          <!-- Neon Pink/Magenta -->
    <Color x:Key="CyberpunkSecondary">#00FFFF</Color>        <!-- Neon Cyan -->
    <Color x:Key="CyberpunkAccent">#00FF00</Color>           <!-- Neon Green -->
    <Color x:Key="CyberpunkWarning">#FFFF00</Color>          <!-- Neon Yellow -->
    <Color x:Key="CyberpunkBackground">#0D0D0D</Color>       <!-- Near Black -->
    <Color x:Key="CyberpunkSurface">#1A0A2E</Color>          <!-- Dark Purple -->
    <Color x:Key="CyberpunkText">#FFFFFF</Color>             <!-- White text for contrast -->
    <Color x:Key="CyberpunkTextSecondary">#B0B0B0</Color>    <!-- Light gray for secondary text -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="CyberpunkPrimaryBrush" Color="{StaticResource CyberpunkPrimary}" />
    <SolidColorBrush x:Key="CyberpunkSecondaryBrush" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="CyberpunkAccentBrush" Color="{StaticResource CyberpunkAccent}" />
    <SolidColorBrush x:Key="CyberpunkBackgroundBrush" Color="{StaticResource CyberpunkBackground}" />
    <SolidColorBrush x:Key="CyberpunkSurfaceBrush" Color="{StaticResource CyberpunkSurface}" />
    <SolidColorBrush x:Key="CyberpunkTextBrush" Color="{StaticResource CyberpunkText}" />
    <SolidColorBrush x:Key="CyberpunkTextSecondaryBrush" Color="{StaticResource CyberpunkTextSecondary}" />

    <!-- Override System Theme Resources -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource CyberpunkBackground}" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="{StaticResource CyberpunkBackground}" />
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{StaticResource CyberpunkSurface}" />

    <!-- Card Background with subtle glow effect simulation -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#1F1A2E" />
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{StaticResource CyberpunkPrimary}" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{StaticResource CyberpunkText}" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{StaticResource CyberpunkTextSecondary}" />
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#909090" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#606060" />

    <!-- Accent/Control Colors -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#00CCCC" />
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#009999" />
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="#006666" />

    <!-- Control Fill Colors -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#2A1A3E" />
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#3A2A4E" />
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#4A3A5E" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="#1A0A1E" />

    <!-- Control Stroke Colors -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="#00AAAA" />

    <!-- Button Specific -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#2A1A3E" />
    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#3A2A4E" />
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#4A3A5E" />
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#1A0A1E" />
    <SolidColorBrush x:Key="ButtonForeground" Color="{StaticResource CyberpunkText}" />
    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{StaticResource CyberpunkPrimary}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource CyberpunkSecondary}" />

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#2A1A3E" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="#3A2A4E" />
    <SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="#4A3A5E" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackground" Color="#1A0A2E" />

    <!-- Status Indicator Colors for Service Card -->
    <SolidColorBrush x:Key="StatusRunningBrush" Color="{StaticResource CyberpunkAccent}" />
    <SolidColorBrush x:Key="StatusStoppedBrush" Color="#606060" />
    <SolidColorBrush x:Key="StatusStartingBrush" Color="{StaticResource CyberpunkWarning}" />
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource CyberpunkPrimary}" />

    <!-- Subtle Focus/Selection Glow -->
    <SolidColorBrush x:Key="FocusVisualPrimaryBrush" Color="{StaticResource CyberpunkSecondary}" />
    <SolidColorBrush x:Key="FocusVisualSecondaryBrush" Color="{StaticResource CyberpunkPrimary}" />

</ResourceDictionary>

<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DefaultApp.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DefaultApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Default App">

    <Grid x:Name="RootGrid" Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <!-- App Logo and Name -->
        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="16"
            Opacity="0"
            x:Name="ContentPanel">

            <!-- App Icon -->
            <Image
                Source="ms-appx:///Assets/Square150x150Logo.png"
                Width="120"
                Height="120"
                HorizontalAlignment="Center" />

            <!-- App Name -->
            <TextBlock
                Text="Default App"
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="White"
                HorizontalAlignment="Center" />

            <!-- Tagline -->
            <TextBlock
                Text="System Information"
                FontSize="14"
                Foreground="#80FFFFFF"
                HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Loading Indicator -->
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="12"
            Opacity="0"
            x:Name="LoadingPanel">

            <ProgressRing
                IsActive="True"
                Width="32"
                Height="32"
                Foreground="White" />

            <TextBlock
                x:Name="LoadingText"
                Text="Loading..."
                FontSize="12"
                Foreground="#80FFFFFF"
                HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Version -->
        <TextBlock
            Grid.Row="2"
            x:Name="VersionText"
            Text="Version 1.0.0"
            FontSize="11"
            Foreground="#40FFFFFF"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,0,0,24"
            Opacity="0" />
    </Grid>
</Window>

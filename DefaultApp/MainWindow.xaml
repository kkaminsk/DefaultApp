<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DefaultApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DefaultApp"
    xmlns:views="using:DefaultApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Default App">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid
            x:Name="AppTitleBar"
            Grid.Row="0"
            Height="48"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="188" />
            </Grid.ColumnDefinitions>

            <!-- App Icon and Title -->
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="12"
                Margin="16,0,0,0"
                VerticalAlignment="Center">
                <Image
                    Source="Assets/StoreLogo.png"
                    Width="16"
                    Height="16" />
                <TextBlock
                    x:Uid="AppTitleText"
                    Text="Default App"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Drag Region (spacer) -->
            <Border Grid.Column="1" x:Name="DragRegion" Background="Transparent" />

            <!-- Theme Selector -->
            <ComboBox
                x:Name="ThemeSelector"
                x:Uid="ThemeSelector"
                Grid.Column="2"
                VerticalAlignment="Center"
                Margin="0,0,8,0"
                MinWidth="160"
                TabIndex="0"
                SelectionChanged="ThemeSelector_SelectionChanged"
                AutomationProperties.Name="Theme selector">
                <ComboBoxItem x:Uid="ThemeSystemDefault" Content="System Default" />
                <ComboBoxItem x:Uid="ThemeLight" Content="Light" />
                <ComboBoxItem x:Uid="ThemeDark" Content="Dark" />
                <ComboBoxItem x:Uid="ThemeCyberpunk" Content="Cyberpunk" />
                <ComboBoxItem x:Uid="ThemeHighContrastDark" Content="High Contrast Dark" />
                <ComboBoxItem x:Uid="ThemeHighContrastLight" Content="High Contrast Light" />
            </ComboBox>

            <!-- Debug Button (DEBUG builds only) -->
            <Button
                x:Name="DebugButton"
                Grid.Column="3"
                VerticalAlignment="Center"
                Margin="0,0,8,0"
                Click="DebugButton_Click"
                Visibility="Collapsed"
                AutomationProperties.Name="Open debug tools">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xEBE8;" FontSize="14" />
                    <TextBlock Text="Debug" />
                </StackPanel>
            </Button>

            <!-- Refresh Button -->
            <Button
                x:Name="RefreshButton"
                x:Uid="RefreshButton"
                Grid.Column="4"
                VerticalAlignment="Center"
                Margin="0,0,8,0"
                Click="RefreshButton_Click"
                TabIndex="1"
                AutomationProperties.Name="Refresh all data">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        x:Name="RefreshIcon"
                        Glyph="&#xE72C;"
                        FontSize="14" />
                    <ProgressRing
                        x:Name="RefreshSpinner"
                        IsActive="False"
                        Width="14"
                        Height="14"
                        Visibility="Collapsed" />
                    <TextBlock x:Uid="RefreshText" Text="Refresh" />
                </StackPanel>
            </Button>

            <!-- Space for window controls -->
            <Border Grid.Column="5" />
        </Grid>

        <!-- Main Content -->
        <views:MainPage x:Name="MainPageContent" Grid.Row="1" />
    </Grid>
</Window>

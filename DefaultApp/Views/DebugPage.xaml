<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DefaultApp.Views.DebugPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DefaultApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Spacing="16">
            <!-- Header -->
            <TextBlock
                Text="Debug Tools"
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,8" />

            <TextBlock
                Text="These tools are only available in DEBUG builds."
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

            <!-- Build Information Card -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Build Information" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock x:Name="BuildConfigText" Text="Configuration: DEBUG" />
                    <TextBlock x:Name="BuildVersionText" Text="Version: 1.0.0.0" />
                    <TextBlock x:Name="BuildTimeText" Text="Build Time: Unknown" />
                    <TextBlock x:Name="RuntimeText" Text="Runtime: Unknown" />
                </StackPanel>
            </Border>

            <!-- Mock Data Options Card -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Mock Data Options" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock
                        Text="Enable mock data to test the UI without real system calls."
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap" />

                    <ToggleSwitch
                        x:Name="UseMockDataToggle"
                        Header="Use Mock System Data"
                        IsOn="{x:Bind ViewModel.UseMockData, Mode=TwoWay}"
                        Toggled="UseMockDataToggle_Toggled" />

                    <ToggleSwitch
                        x:Name="SimulateSlowLoadToggle"
                        Header="Simulate Slow Loading (2s delay)"
                        IsOn="{x:Bind ViewModel.SimulateSlowLoading, Mode=TwoWay}" />

                    <ToggleSwitch
                        x:Name="SimulateErrorsToggle"
                        Header="Simulate Random Errors"
                        IsOn="{x:Bind ViewModel.SimulateErrors, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <!-- Service Testing Card -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Service Testing" FontWeight="SemiBold" FontSize="16" />

                    <Button
                        x:Name="TriggerBackgroundTaskButton"
                        Content="Trigger Background Task Event"
                        Click="TriggerBackgroundTaskButton_Click" />

                    <Button
                        x:Name="SimulateServiceErrorButton"
                        Content="Simulate Service Error"
                        Click="SimulateServiceErrorButton_Click" />

                    <Button
                        x:Name="ClearLogsButton"
                        Content="Open Log Folder"
                        Click="OpenLogFolderButton_Click" />
                </StackPanel>
            </Border>

            <!-- Logging Card -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Logging" FontWeight="SemiBold" FontSize="16" />

                    <ComboBox
                        x:Name="LogLevelComboBox"
                        Header="Minimum Log Level"
                        SelectedIndex="1"
                        SelectionChanged="LogLevelComboBox_SelectionChanged">
                        <ComboBoxItem Content="Trace" />
                        <ComboBoxItem Content="Debug" />
                        <ComboBoxItem Content="Information" />
                        <ComboBoxItem Content="Warning" />
                        <ComboBoxItem Content="Error" />
                    </ComboBox>

                    <Button
                        x:Name="WriteTestLogButton"
                        Content="Write Test Log Entry"
                        Click="WriteTestLogButton_Click" />

                    <TextBlock
                        x:Name="LogPathText"
                        Text="Log Path: Loading..."
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button
                x:Name="CloseButton"
                Content="Close Debug Panel"
                HorizontalAlignment="Center"
                Click="CloseButton_Click" />
        </StackPanel>
    </ScrollViewer>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DefaultApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DefaultApp.Views"
    xmlns:viewmodels="using:DefaultApp.ViewModels"
    xmlns:converters="using:DefaultApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <converters:CopyIconConverter x:Key="CopyIconConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <!-- InfoCard Style Template -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="MinWidth" Value="300" />
        </Style>

        <!-- Card Header Style -->
        <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <!-- Property Label Style -->
        <Style x:Key="PropertyLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!-- Property Value Style -->
        <Style x:Key="PropertyValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <!-- Copy Button Style -->
        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="MinWidth" Value="28" />
            <Setter Property="MinHeight" Value="28" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ControlFillColorSecondaryBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ControlFillColorTertiaryBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TextFillColorDisabledBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Property Separator Style -->
        <Style x:Key="PropertySeparatorStyle" TargetType="Border">
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{ThemeResource DividerStrokeColorDefaultBrush}" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!-- Skeleton Placeholder Styles -->
        <Style x:Key="SkeletonRectangleStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorSecondaryBrush}" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style x:Key="SkeletonHeaderStyle" TargetType="Border" BasedOn="{StaticResource SkeletonRectangleStyle}">
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="180" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="SkeletonLabelStyle" TargetType="Border" BasedOn="{StaticResource SkeletonRectangleStyle}">
            <Setter Property="Height" Value="14" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="SkeletonValueStyle" TargetType="Border" BasedOn="{StaticResource SkeletonRectangleStyle}">
            <Setter Property="Height" Value="16" />
            <Setter Property="Width" Value="220" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

    </Page.Resources>

    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled">

        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Skeleton Cards Container (shown during loading) -->
            <ItemsControl x:Name="SkeletonContainer" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel x:Name="SkeletonPanel" Orientation="Vertical" Spacing="16" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Skeleton Card 1: Operating System -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource SkeletonHeaderStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="100" />
                    </StackPanel>
                </Border>

                <!-- Skeleton Card 2: Device & Hardware -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource SkeletonHeaderStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="280" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="40" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="150" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="80" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="80" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="60" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="60" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="40" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="40" />
                    </StackPanel>
                </Border>

                <!-- Skeleton Card 3: BIOS & Security -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource SkeletonHeaderStyle}" Width="140" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="180" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="100" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="120" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="60" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="80" />
                    </StackPanel>
                </Border>

                <!-- Skeleton Card 4: TPM Information -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource SkeletonHeaderStyle}" Width="150" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="160" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="100" />
                    </StackPanel>
                </Border>

                <!-- Skeleton Card 5: Network Information -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource SkeletonHeaderStyle}" Width="170" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="130" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="130" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="130" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="130" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="160" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />
                        <Border Style="{StaticResource SkeletonLabelStyle}" />
                        <Border Style="{StaticResource SkeletonValueStyle}" Width="80" />
                    </StackPanel>
                </Border>
            </ItemsControl>

            <!-- Cards Container with VariableSizedWrapGrid for responsive layout (hidden during loading) -->
            <ItemsControl x:Name="CardsContainer" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel x:Name="CardsPanel" Orientation="Vertical" Spacing="16" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Operating System Card -->
                <Border
                    Style="{StaticResource InfoCardStyle}"
                    AutomationProperties.AutomationId="OsInfoCard"
                    AutomationProperties.Name="Operating System Information">

                    <StackPanel>
                        <TextBlock
                            x:Uid="OsCardHeader"
                            Text="Operating System"
                            Style="{StaticResource CardHeaderStyle}"
                            AutomationProperties.HeadingLevel="Level2" />

                        <!-- Machine Name -->
                        <TextBlock x:Uid="MachineNameLabel" Text="Machine Name" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.MachineName, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Machine Name value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyMachineNameButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="MachineName"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Machine Name to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=MachineName}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- OS Name -->
                        <TextBlock x:Uid="OsNameLabel" Text="OS Name" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.OsName, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="OS Name value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyOsNameButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="OsName"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy OS Name to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=OsName}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- OS Version -->
                        <TextBlock x:Uid="OsVersionLabel" Text="Version" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.OsVersion, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="OS Version value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyVersionButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="Version"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Version to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=Version}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Build Number -->
                        <TextBlock x:Uid="OsBuildLabel" Text="Build" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.OsBuildNumber, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Build number value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyBuildButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="Build"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Build to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=Build}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- 64-bit OS -->
                        <TextBlock x:Uid="OsIs64BitLabel" Text="64-bit OS" Style="{StaticResource PropertyLabelStyle}" />
                        <TextBlock
                            Text="{x:Bind ViewModel.OsIs64Bit, Mode=OneWay}"
                            Style="{StaticResource PropertyValueStyle}"
                            AutomationProperties.Name="64-bit OS value" />

                        <!-- System Locale -->
                        <TextBlock x:Uid="SystemLocaleLabel" Text="System Locale" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.SystemLocale, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="System Locale value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopySystemLocaleButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="SystemLocale"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy System Locale to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=SystemLocale}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Activation Status -->
                        <TextBlock x:Uid="ActivationStatusLabel" Text="Activation Status" Style="{StaticResource PropertyLabelStyle}" />
                        <TextBlock
                            Text="{x:Bind ViewModel.ActivationStatus, Mode=OneWay}"
                            Style="{StaticResource PropertyValueStyle}"
                            Margin="0,0,0,12"
                            AutomationProperties.Name="Windows Activation Status value" />

                        <!-- Test Audio Button -->
                        <Button
                            x:Uid="TestAudioButton"
                            Content="Test Audio"
                            Command="{x:Bind ViewModel.PlayAudioCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="12,8"
                            AutomationProperties.Name="Test audio file">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE768;" FontSize="16" />
                                        <TextBlock Text="Test Audio" />
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Device & Hardware Card -->
                <Border
                    Style="{StaticResource InfoCardStyle}"
                    AutomationProperties.AutomationId="HardwareInfoCard"
                    AutomationProperties.Name="Device and Hardware Information">

                    <StackPanel>
                        <TextBlock
                            x:Uid="HardwareCardHeader"
                            Text="Device &amp; Hardware"
                            Style="{StaticResource CardHeaderStyle}"
                            AutomationProperties.HeadingLevel="Level2" />

                        <!-- CPU Model -->
                        <TextBlock x:Uid="CpuModelLabel" Text="CPU Model" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.CpuModel, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="CPU Model value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyCpuModelButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="CpuModel"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy CPU Model to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=CpuModel}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Processor Count -->
                        <TextBlock x:Uid="ProcessorCountLabel" Text="Processor Count" Style="{StaticResource PropertyLabelStyle}" />
                        <TextBlock
                            Text="{x:Bind ViewModel.ProcessorCount, Mode=OneWay}"
                            Style="{StaticResource PropertyValueStyle}"
                            AutomationProperties.Name="Processor Count value" />
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Device Model -->
                        <TextBlock x:Uid="DeviceModelLabel" Text="Device Model" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.DeviceModel, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Device Model value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyDeviceModelButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="DeviceModel"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Device Model to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=DeviceModel}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Serial Number -->
                        <TextBlock x:Uid="SerialNumberLabel" Text="Serial Number" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.SerialNumber, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Serial Number value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopySerialNumberButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="SerialNumber"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Serial Number to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=SerialNumber}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- Total RAM -->
                        <TextBlock x:Uid="TotalRamLabel" Text="Total RAM" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.TotalRam, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Total RAM value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyTotalRamButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="TotalRam"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy Total RAM to clipboard">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{x:Bind ViewModel.CopiedFieldName, Mode=OneWay, Converter={StaticResource CopyIconConverter}, ConverterParameter=TotalRam}" FontSize="14" />
                            </Button>
                        </Grid>
                        <Border Style="{StaticResource PropertySeparatorStyle}" />

                        <!-- VRAM -->
                        <TextBlock x:Uid="VramLabel" Text="VRAM" Style="{StaticResource PropertyLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind ViewModel.Vram, Mode=OneWay}"
                                FontSize="14"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="VRAM value" />
                            <Button
                                Grid.Column="1"
                                x:Uid="CopyVramButton"
                                Style="{StaticResource CopyButtonStyle}"
                                Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                CommandParameter="Vram"
                                ToolTipService.ToolTip="Copy to clipboard"
                                AutomationProperties.Name="Copy VRAM to clipboard">
